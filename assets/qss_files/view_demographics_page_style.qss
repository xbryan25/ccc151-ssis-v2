QWidget{
    background-color:rgb(230, 204, 178);
}

QPushButton{
    background-color: rgb(176, 137, 104);
    color: rgb(237, 224, 212);

    border-radius: 10%;

    border-color: rgb(156, 102, 68);
    border-width: 2px;
    border-style: solid;
}

QPushButton::hover{
    background-color: rgb(127, 85, 57);
}

QComboBox{
    border: 1px solid black;
    border-radius: 5px;
    border-style: solid;

    background-color: rgb(221, 184, 146);
    selection-background-color: rgb(180, 180, 170);
    selection-color: black;
}

QComboBox::drop-down {
    width: 20px;
    height: 20px;

    subcontrol-origin: padding;
    subcontrol-position: center right;

    margin-right: 2px;

    border-width: 1px;
    border-color: black;
    border-style: solid;

    border-radius: 5px;
    background-color: rgb(221, 184, 146);
}

QComboBox::drop-down:hover, QComboBox::drop-down:pressed{
    background-color: rgb(176, 137, 104);
}

QComboBox::down-arrow{
    border-image: url(../assets/images/down-arrow.png) 0 0 0 0 stretch stretch;
}

QScrollBar:vertical {
    background: rgb(156, 102, 68);

    border-color: rgb(127, 85, 57);
    border-width: 2px;
    border-style: solid;
    border-radius: 3%;
}

QScrollBar::handle:vertical {
    height: 10px;
    background: rgb(230, 204, 178);
}

QScrollBar::handle:vertical:hover {
    height: 10px;
    background: rgb(200, 165, 125);
}

QScrollBar::add-line:vertical {
    border: none;
    background: none;
    width: 0px;
    height: 0px;
}

QScrollBar::sub-line:vertical {
    border: none;
    background: none;
    width: 0px;
    height: 0px;
}

QScrollBar::up-arrow:vertical, QScrollBar::down-arrow:vertical {
    border: none;
    background: none;
    color: none;

    width: 0px;
    height: 0px;
}

QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical {
     background: none;
}

